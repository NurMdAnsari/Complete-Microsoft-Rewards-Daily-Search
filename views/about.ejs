@media screen and (min-width: 768px) {
 
  .open-overlay{

  bottom:1em;
  right:1em;
  opacity: 1;
  
}
.button {
 

 width: 1.5em;
 height: 1.5em;
 opacity: 1;

}
}



.button:before {
  position: absolute;
  content: "";
  width: 20px;
  height: 2px;
  background: #fff;
  transform: rotate(90deg);
  transition: all 0.4s ease;
}
.button:after {
  position: absolute;
  content: "";
  width: 20px;
  height: 2px;
  background: #fff;
  transition: all 0.4s ease;
}

.nav {
  position: fixed;
  bottom:50px;
  right:30px;
  opacity: 0;
  transition: all 0.4s ease-in-out;
  background: #fff;
  width: 200px;
  border-radius: 5px;
  transform: translateX(0%);
  box-shadow: 2px 3px 10px 0 rgba(81, 81, 81, 0.1);
  border: 1px solid #e4e4e4;
  padding: 10px;
}
.nav ul {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}
.nav a {
  text-align: left;
  margin: 20px 0;
  color: #8974FB;
  text-decoration: none;
  font-family: "Roboto", sans-serif;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-size: 14px;
  padding-left:20px;
}
.nav a:hover {
  color: #C784DD;
}

#toggle:checked ~ .nav {
  opacity: 1;
  transform: translateY(10%);
}

#toggle:checked ~ .button:before {
  transform: rotate(225deg);
}

#toggle:checked ~ .button:after {
  transform: rotate(135deg);
}

@media (max-width: 640px) {
  .container {
    width: 100%;
  }
}

